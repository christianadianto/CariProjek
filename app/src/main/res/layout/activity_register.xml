<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bluejack16_2.cariprojek.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="CariProject"
        android:textColor="@color/colorSecondary"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTitle"/>

    <EditText
        android:id="@+id/txtEmailRegis"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvTitle"
        android:padding="8dp"
        android:background="@drawable/round_edittext"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txtPasswordRegis"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:layout_below="@+id/txtEmailRegis"
        android:background="@drawable/round_edittext"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txtNameRegis"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtPasswordRegis"
        android:padding="8dp"
        android:background="@drawable/round_edittext"
        android:hint="Name"
        />

    <EditText
        android:id="@+id/txtAddressRegis"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtNameRegis"
        android:padding="8dp"
        android:background="@drawable/round_edittext"
        android:hint="Address" />

    <EditText
        android:id="@+id/txtPhoneRegis"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtAddressRegis"
        android:padding="8dp"
        android:background="@drawable/round_edittext"
        android:hint="Phone Number" />

    <Button
        android:id="@+id/btnSubmitRegis"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_button_secondary_color"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtPhoneRegis"
        android:text="Create Account"/>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorSecondaryDark"
        android:layout_below="@id/btnSubmitRegis"
        android:text="Already have an account? Signin"/>
</android.widget.RelativeLayout>
