<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bluejack16_2.cariprojek.UpdateProjectFragment">

    <!-- TODO: Update blank fragment layout -->

    <Spinner
        android:id="@+id/spProjectList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tvUpdateProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spProjectList"
        android:layout_marginTop="15dp"
        android:text="Project Name" />

    <TextView
        android:id="@+id/tvUpdateCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:layout_alignTop="@+id/spCategoryList"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvUpdateBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Budget"
        android:layout_below="@+id/spCategoryList"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvUpdateDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_alignBaseline="@+id/txtUpdateDescription"
        android:layout_alignBottom="@+id/txtUpdateDescription"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvUpdateStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_alignBaseline="@+id/cbUpdateStatus"
        android:layout_alignBottom="@+id/cbUpdateStatus"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtUpdateProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/tvUpdateProjectName"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/txtUpdateBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_alignBaseline="@+id/tvUpdateBudget"
        android:layout_alignBottom="@+id/tvUpdateBudget"
        android:layout_alignStart="@+id/spCategoryList" />


    <Spinner
        android:id="@+id/spCategoryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtUpdateProjectName"
        android:layout_below="@+id/txtUpdateProjectName"
        android:layout_marginTop="15dp"
        android:entries="@array/category_project" />

    <EditText
        android:id="@+id/txtUpdateDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cbUpdateStatus"
        android:layout_below="@+id/cbUpdateStatus"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/tvKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUpdateDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:text="" />

    <CheckBox
        android:id="@+id/cbUpdateStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtUpdateBudget"
        android:layout_below="@+id/txtUpdateBudget"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:ems="10"
        android:text="Closed" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Update"
        android:layout_below="@+id/tvKey"
        android:layout_toStartOf="@+id/tvKey" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_alignBaseline="@+id/btnUpdate"
        android:layout_alignBottom="@+id/btnUpdate"
        android:layout_alignEnd="@+id/cbUpdateStatus" />

</RelativeLayout>
