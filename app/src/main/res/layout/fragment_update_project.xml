<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bluejack16_2.cariprojek.UpdateProjectFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/colorSecondary"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Update"></TextView>

    <Spinner
        android:id="@+id/spProjectList"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvTitle"/>

    <EditText
        android:id="@+id/txtUpdateProjectName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spProjectList"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_edittext"
        android:padding="8dp"
        android:text="Project Name"/>

    <EditText
        android:id="@+id/txtUpdateBudget"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtUpdateProjectName"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_edittext"
        android:padding="8dp"
        android:text="Rp. 2.000.000"
        android:inputType="number"/>

    <Spinner
        android:id="@+id/spCategoryList"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtUpdateBudget"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:entries="@array/category_project"/>

    <EditText
        android:id="@+id/txtUpdateDescription"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spCategoryList"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_edittext"
        android:padding="8dp"
        android:text="Project Description"/>
    
    <TextView
        android:id="@+id/tvKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUpdateDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:text="" />

    <CheckBox
        android:id="@+id/cbUpdateStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtUpdateDescription"
        android:layout_alignStart="@id/txtUpdateDescription"
        android:checked="false"
        android:text="Closed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/cbUpdateStatus">


        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button_secondary_color"
            android:text="Update"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button_secondary_color"
            android:text="Delete"/>

    </LinearLayout>

</RelativeLayout>
