<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bluejack16_2.cariprojek.AddProgressActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/colorSecondary"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Add Progress"></TextView>

    <Spinner
        android:id="@+id/spProjectList"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvTitle"/>

    <EditText
        android:id="@+id/txtProgress"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spProjectList"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_edittext"
        android:padding="8dp"
        android:text="Progress"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtProgress"
        android:background="@drawable/round_button_secondary_color"
        android:text="Submit"/>

</RelativeLayout>
