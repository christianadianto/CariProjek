<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bluejack16_2.cariprojek.UpdatePortofolioFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvTitlePortofolio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/colorSecondary"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Update Portofolio"></TextView>

    <Spinner
        android:id="@+id/spPortofolioList"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvTitlePortofolio"/>

    <EditText
        android:id="@+id/txtUpdatePortofolioName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spPortofolioList"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_edittext"
        android:padding="8dp"
        android:text="Project Name"/>

    <EditText
        android:id="@+id/txtUpdateUrl"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtUpdatePortofolioName"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_edittext"
        android:padding="8dp"
        android:text="http://www.google.com"
        />

    <Spinner
        android:id="@+id/spCategoryListPortofolio"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtUpdateUrl"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:entries="@array/category_project"/>

    <EditText
        android:id="@+id/txtUpdateDescriptionPortofolio"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spCategoryListPortofolio"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_edittext"
        android:padding="8dp"
        android:text="Project Description"/>


    <TextView
        android:id="@+id/tvKeyPortofolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUpdateDescriptionPortofolio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtUpdateDescriptionPortofolio">

        <Button
            android:id="@+id/btnUpdatePortofolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button_secondary_color"
            android:text="Update"/>

        <Button
            android:id="@+id/btnDeletePortofolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button_secondary_color"
            android:text="Delete"/>

    </LinearLayout>

</RelativeLayout>
