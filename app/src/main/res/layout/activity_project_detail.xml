<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bluejack16_2.cariprojek.ProjectDetailActivity">

    <LinearLayout
        android:id="@+id/projectInformationSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topProjectInformationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/categoryIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_textview">

                <TextView
                    android:id="@+id/tvProjectCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="C#"
                    android:textStyle="bold"
                    android:textColor="@color/colorSecondary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/topDataSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/tvProjectName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Quora"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/tvProjectBudget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="IDR 2.000.000"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "/>

                        <TextView
                            android:id="@+id/tvProjectStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topDataSection">

                    <TextView
                        android:id="@+id/tvProjectOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peter Hartawan" />

                    <TextView
                        android:id="@+id/tvProjectOwnerRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="5/5" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomProjectInformationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProjectDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topProjectInformationSection"
                android:padding="10dp"
                android:text="Project Description" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/choosenUserSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_below="@+id/projectInformationSection">

        <TextView
            android:id="@+id/tvChoosenTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryDark"
            android:textStyle="bold"
            android:text="Project Manager"/>


        <LinearLayout
            android:id="@+id/choosenUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tvChoosenTitle">

            <LinearLayout
                android:id="@+id/choosenUserIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_textview">

                <TextView
                    android:id="@+id/tvChoosenUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="C#"
                    android:textStyle="bold"
                    android:textColor="@color/colorSecondary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/topChoosenUserSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/tvChoosenName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Quora"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topDataSection">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate : " />

                    <TextView
                        android:id="@+id/tvChoosenUserRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="5/5" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/joinedUserSection"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_below="@id/choosenUserSection">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryDark"
            android:textStyle="bold"
            android:text="Joined User"/>

        <ListView
            android:id="@+id/listViewJoinedUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/choosenUserSection" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button_secondary_color"
            android:text="Join"/>

        <Button
            android:id="@+id/btnChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_secondary_color"
            android:text="Chat"/>
    </LinearLayout>

</RelativeLayout>
