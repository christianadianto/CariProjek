<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bluejack16_2.cariprojek.ProfileFragment">


    <TextView
        android:id="@+id/tvNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorSecondaryDark"
        android:textSize="20dp"
        android:text="Name"/>

    <TextView
        android:id="@+id/tvNameProfileContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tvNameProfile"
        android:textColor="@color/colorSecondary"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="TextView"/>


    <TextView
        android:id="@+id/tvEmailProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvNameProfileContent"
        android:textColor="@color/colorSecondaryDark"
        android:textSize="20dp"
        android:text="Email"/>

    <TextView
        android:id="@+id/tvEmailProfileContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tvEmailProfile"
        android:textColor="@color/colorSecondary"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="TextView"/>

    <TextView
        android:id="@+id/tvAddressProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvEmailProfileContent"
        android:textColor="@color/colorSecondaryDark"
        android:textSize="20dp"
        android:text="Address"/>

    <TextView
        android:id="@+id/tvAddressProfileContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tvAddressProfile"
        android:textColor="@color/colorSecondary"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="TextView"/>

    <TextView
        android:id="@+id/tvPhoneProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvAddressProfileContent"
        android:textColor="@color/colorSecondaryDark"
        android:textSize="20dp"
        android:text="Phone Number"/>


    <TextView
        android:id="@+id/tvPhoneProfileContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tvPhoneProfile"
        android:textColor="@color/colorSecondary"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="TextView"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_update"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_above="@+id/btn_add"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_update"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_add"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_above="@+id/btn_portofolio"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/ic_plus"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_portofolio"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_menu_send"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="100dp"
        android:src="@drawable/ic_assignment"/>

</RelativeLayout>
